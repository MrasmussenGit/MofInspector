<Window x:Class="MofInspector.CompareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MOF Comparison"
        Height="650" Width="1080" Background="LightBlue" WindowStartupLocation="CenterOwner"
        MinWidth="1080">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top section: file load + paths (row 0) -->
        <StackPanel Grid.Row="0" Margin="0,0,0,8" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button Content="Load File 1" Width="120" Margin="0,0,8,0" Click="LoadFile1_Click"/>
                <Button Content="Load File 2" Width="120" Margin="0,0,16,0" Click="LoadFile2_Click"/>

                <TextBlock Text="File1:" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="File1PathText" Width="240" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>

                <TextBlock Text="File2:" FontWeight="Bold" Margin="15,0,5,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="File2PathText" Width="240" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="Show:" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <CheckBox x:Name="ShowAllFiltersCheckBox"
                          Content="All"
                          ToolTip="Toggle every filter on or off."
                          IsChecked="False"
                          Margin="0,0,16,0"
                          Checked="MasterFiltersChanged"
                          Unchecked="MasterFiltersChanged"/>
                <CheckBox x:Name="ShowMatchCheckBox"
                          Content="Match"
                          ToolTip="Rules present in both files with all properties identical."
                          IsChecked="False"
                          Margin="0,0,8,0"
                          Checked="FilterDiffsChanged"
                          Unchecked="FilterDiffsChanged"/>
                <CheckBox x:Name="ShowDifferentCheckBox"
                          Content="Different"
                          ToolTip="Rules in both files where at least one non-version property differs."
                          IsChecked="True"
                          Margin="0,0,8,0"
                          Checked="FilterDiffsChanged"
                          Unchecked="FilterDiffsChanged"/>
                <CheckBox x:Name="ShowVersionOnlyCheckBox"
                          Content="Version Only"
                          ToolTip="Rules differing only by PowerSTIG version/path; all other properties match."
                          IsChecked="False"
                          Margin="0,0,8,0"
                          Checked="FilterDiffsChanged"
                          Unchecked="FilterDiffsChanged"/>
                <CheckBox x:Name="ShowMissingFile1CheckBox"
                          Content="Missing in File 1"
                          ToolTip="Rule absent from File 1 but present in File 2."
                          IsChecked="True"
                          Margin="0,0,8,0"
                          Checked="FilterDiffsChanged"
                          Unchecked="FilterDiffsChanged"/>
                <CheckBox x:Name="ShowMissingFile2CheckBox"
                          Content="Missing in File 2"
                          ToolTip="Rule absent from File 2 but present in File 1."
                          IsChecked="True"
                          Margin="0,0,8,0"
                          Checked="FilterDiffsChanged"
                          Unchecked="FilterDiffsChanged"/>
                <CheckBox x:Name="ShowParsingErrorCheckBox"
                          Content="Parsing Error"
                          ToolTip="Rule found but its details could not be parsed in one or both files."
                          IsChecked="False"
                          Margin="0,0,8,0"
                          Checked="FilterDiffsChanged"
                          Unchecked="FilterDiffsChanged"/>
            </StackPanel>
        </StackPanel>

        <ListView x:Name="DifferencesList"
                  Grid.Row="1"
                  Background="White"
                  MouseDoubleClick="DifferencesList_MouseDoubleClick"
                  KeyDown="DifferencesList_KeyDown">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="1"/>
                    <Setter Property="Padding" Value="2"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="Match">
                            <Setter Property="Background" Value="#DFF5D8"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="VersionOnly">
                            <Setter Property="Background" Value="#FFF7E6"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Different">
                            <Setter Property="Background" Value="#FFE4C4"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Missing in File 1">
                            <Setter Property="Background" Value="#FFFFD5"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Missing in File 2">
                            <Setter Property="Background" Value="#FFFFD5"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Parsing Error">
                            <Setter Property="Background" Value="#FFF0B3"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Rule ID" Width="230" DisplayMemberBinding="{Binding RuleId}"/>
                    <GridViewColumn Header="Status" Width="120" DisplayMemberBinding="{Binding Status}"/>
                    <GridViewColumn Header="Category" Width="120" DisplayMemberBinding="{Binding Category}"/>
                    <GridViewColumn Header="Details" Width="450" DisplayMemberBinding="{Binding Details}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Footer with right-aligned Close button -->
        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1"
                    Content="Close"
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Right"
                    Click="Close_Click"/>
        </Grid>
    </Grid>
</Window>