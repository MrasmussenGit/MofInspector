<Window x:Class="MofInspector.CompareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MOF Comparison"
        Height="650" Width="1080" Background="LightBlue" WindowStartupLocation="CenterOwner"
        MinWidth="1080">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Button Content="Load File 1" Width="120" Margin="0,0,8,0" Click="LoadFile1_Click"/>
            <Button Content="Load File 2" Width="120" Margin="0,0,16,0" Click="LoadFile2_Click"/>

            <TextBlock Text="File1:" FontWeight="Bold" Margin="0,0,5,0"/>
            <TextBlock x:Name="File1PathText" Width="240" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>

            <TextBlock Text="File2:" FontWeight="Bold" Margin="15,0,5,0"/>
            <TextBlock x:Name="File2PathText" Width="240" TextTrimming="CharacterEllipsis" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>

            <CheckBox x:Name="IncludeVersionOnlyDiffsCheckBox"
                      Content="Show version-only diffs"
                      Margin="20,0,0,0"
                      IsChecked="False"
                      Checked="FilterDiffsChanged"
                      Unchecked="FilterDiffsChanged"/>
        </StackPanel>

        <ListView x:Name="DifferencesList"
                  Grid.Row="1"
                  Background="White"
                  MouseDoubleClick="DifferencesList_MouseDoubleClick"
                  KeyDown="DifferencesList_KeyDown">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="1"/>
                    <Setter Property="Padding" Value="2"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="VersionOnly">
                            <Setter Property="Background" Value="#FFF7E6"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Different">
                            <Setter Property="Background" Value="#FFE4C4"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Missing in File 1">
                            <Setter Property="Background" Value="#FFFFD5"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Missing in File 2">
                            <Setter Property="Background" Value="#FFFFD5"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Parsing Error">
                            <Setter Property="Background" Value="#FFF0B3"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Rule ID" Width="230" DisplayMemberBinding="{Binding RuleId}"/>
                    <GridViewColumn Header="Status" Width="120" DisplayMemberBinding="{Binding Status}"/>
                    <GridViewColumn Header="Category" Width="120" DisplayMemberBinding="{Binding Category}"/>
                    <GridViewColumn Header="Details" Width="450" DisplayMemberBinding="{Binding Details}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <DockPanel Grid.Row="2" Margin="0,8,0,0">
            <Button Content="Close" Width="100" Height="30" DockPanel.Dock="Right" Click="Close_Click"/>
        </DockPanel>
    </Grid>
</Window>